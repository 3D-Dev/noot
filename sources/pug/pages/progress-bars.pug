extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear
include ../components/_progress-circle

block variables
	- var activeCategory = 'pages'
	- var pageName = 'Progress Bars'

block page  
	// Page Header
	+header-classic({})
	
	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-elements'
	})
	
	// Section Skill Bars and Circle Progress Bars
	section.section.section-xl.bg-default
		.container
			.row.row-50.justify-content-center
				.col-md-10.col-lg-5.col-xl-6
					+progress-bar-linear({
						title: "Database Management",
						valueTo: "79"
					})
					
					+progress-bar-linear({
						title: "iOS/MacOS Apps",
						valueTo: "72"
					})
					
					+progress-bar-linear({
						title: "Android Applications",
						valueTo: "88"
					})
				
				.col-md-10.col-lg-7.col-xl-6
					.row.row-50.justify-content-center

						.col-sm-4
							+progress-circle({
								title: 'Leadership',
								value: 90
							})

						.col-sm-4
							+progress-circle({
								title: 'Creativity',
								value: 60
							})

						.col-sm-4
							+progress-circle({
								title: 'Innovations',
								value: 87
							})

	='\n'
	
	// Page Footer
	+footer-classic({})
