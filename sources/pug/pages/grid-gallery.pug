extends  ../_skeleton

block variables
	- var activeCategory = 'gallery'
	- var pageName = 'Web開発'

block page 
	// Page Header
	+header-classic({})
	
	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-elements'
	})
	
	// Web開発
	section.section.section-xl.bg-default.text-center
		.container.isotope-wrap
			.isotope-filters.isotope-filters-horizontal
				//- Isotope Filters
				button.isotope-filters-toggle.button.button-md.button-icon.button-icon-right.button-default-outline.button-wapasha(data-custom-toggle='#isotope-1', data-custom-toggle-hide-on-blur='true'  data-custom-toggle-disable-on-blur='true')
					span.icon.fa.fa-caret-down
					| Filter
				ul#isotope-1.isotope-filters-list
					li: a.active(href='#', data-isotope-filter='*', data-isotope-group='gallery') All
					li: a(href='#', data-isotope-filter='Type 1', data-isotope-group='gallery') mobile Apps
					li: a(href='#', data-isotope-filter='Type 2', data-isotope-group='gallery') Custom Software
					li: a(href='#', data-isotope-filter='Type 3', data-isotope-group='gallery') QA & Testing
					li: a(href='#', data-isotope-filter='Type 4', data-isotope-group='gallery') UX and Design
			.row.row-50.isotope(data-isotope-layout='fitRows', data-isotope-group='gallery', data-lightgallery='group')
				.col-md-6.col-lg-4.isotope-item(data-filter='Type 4')
					+thumbnail-modern({
						mod: 'thumbnail-sm',
						nameImg: 'grid-gallery',
						sizeImg: '370x303',
						numberImg: '1',
						title: 'iStats',
						subtitle: '2017, iOS Development Services'
					})
				.col-md-6.col-lg-4.isotope-item(data-filter='Type 3')
					+thumbnail-modern({
						mod: 'thumbnail-sm',
						nameImg: 'grid-gallery',
						sizeImg: '370x303',
						numberImg: '2',
						title: 'BizAdvisor App',
						subtitle: '2015, iPhone App'
					})
				.col-md-6.col-lg-4.isotope-item(data-filter='Type 2')
					+thumbnail-modern({
						mod: 'thumbnail-sm',
						nameImg: 'grid-gallery',
						sizeImg: '370x303',
						numberImg: '3',
						title: 'Xtra Graph Builder',
						subtitle: '2013, QA & Testing'
					})
				.col-md-6.col-lg-4.isotope-item(data-filter='Type 1')
					+thumbnail-modern({
						mod: 'thumbnail-sm',
						nameImg: 'grid-gallery',
						sizeImg: '370x303',
						numberImg: '4',
						title: 'WeatherCast',
						subtitle: '2012, UI & UX Design'
					})
				.col-md-6.col-lg-4.isotope-item(data-filter='Type 4')
					+thumbnail-modern({
						mod: 'thumbnail-sm',
						nameImg: 'grid-gallery',
						sizeImg: '370x303',
						numberImg: '5',
						title: 'RKX Assistant',
						subtitle: '2011, App Optimization'
					})
				.col-md-6.col-lg-4.isotope-item(data-filter='Type 3')
					+thumbnail-modern({
						mod: 'thumbnail-sm',
						nameImg: 'grid-gallery',
						sizeImg: '370x303',
						numberImg: '6',
						title: 'kalendr',
						subtitle: '2009, Social App'
					})
			
			.button-wrap: button.button.button-md.button-default-outline.button-wapasha Load More
	='\n'
	
	// Page Footer
	+footer-classic({})