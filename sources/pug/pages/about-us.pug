extends  ../_skeleton

//- Includes
include ../components/_ui-progress-bar-linear
include ../components/_progress-circle
include ../components/_ui-quote
include ../components/_ui-counters

block variables
	- var activeCategory = 'about'
	- var pageName = 'About Us'

block page 
	// Page Header
	+header-classic({})
	
	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-elements'
	})
	
	// Why choose us
	section.section.section-sm.section-first.bg-default.text-md-left
		.container
			.row.row-50.justify-content-center.align-items-xl-center
				.col-md-10.col-lg-5.col-xl-6: +jpg('about-1-519x564')
				.col-md-10.col-lg-7.col-xl-6
					h2.text-spacing-25.font-weight-normal.title-opacity-9 Why choose us
					// Bootstrap tabs
					#tabs-4.tabs-custom.tabs-horizontal.tabs-line
						// Nav tabs
						ul.nav.nav-tabs
							li.nav-item(role='presentation'): a.nav-link.active(href='#tabs-4-1' data-toggle='tab') Experience
							li.nav-item(role='presentation'): a.nav-link(href='#tabs-4-2' data-toggle='tab') Skills
							li.nav-item(role='presentation'): a.nav-link(href='#tabs-4-3' data-toggle='tab') Mission
						
						// Tab panes
						.tab-content
							div#tabs-4-1.tab-pane.fade.show.active
								p Curabitur non nulla sit amet nisl tempus convallis quis ac lectus. Cras ultricies ligula sed magna dictum porta. Nulla quis lorem ut libero malesuada feugiat. Nulla porttitor accumsan tincidunt. Cras ultricies ligula sed magna dictum porta.
								+progress-bar-linear({
									title: "Windows Applications",
									valueTo: "79"
								})
								+progress-bar-linear({
									title: "iOS/MacOS Apps",
									valueTo: "72"
								})
								+progress-bar-linear({
									title: "Android Applications",
									valueTo: "88"
								})
							
							div#tabs-4-2.tab-pane.fade
								.row.row-40.justify-content-center.text-center.inset-top-10
									.col-sm-4
										+progress-circle({
											title: "App development",
											value: '87'
										})
									.col-sm-4
										+progress-circle({
											title: "QA & Testing",
											value: '74'
										})
									.col-sm-4
										+progress-circle({
											title: "Customer support",
											value: '99'
										})
								.group-md.group-middle
									a.button.button-width-xl-230.button-primary.button-pipaluk(href='#') Get in touch
									a.button.button-width-xl-310.button-default-outline.button-wapasha(href='#') Download presentation
							
							div#tabs-4-3.tab-pane.fade
								p Cras ultricies ligula sed magna dictum porta. Donec rutrum congue leo eget malesuada. Curabitur non nulla sit amet nisl tempus convallis quis ac lectus. Curabitur aliquet quam id dui posuere blandit. Curabitur non nulla sit amet nisl tempus convallis quis ac lectus.
								.text-center.text-sm-left.offset-top-30
									ul.row-16.list-0.list-custom.list-marked.list-marked-sm.list-marked-secondary
										li iOS/MacOS Apps
										li Applications
										li QA & Testing
										li UX and Design
										li Android Applications
										li Database Management
								.group-md.group-middle
									a.button.button-width-xl-230.button-primary.button-pipaluk(href='#') Get in touch
									a.button.button-width-xl-310.button-default-outline.button-wapasha(href='#') Download presentation
	='\n'
	
	// 最新のプロジェクト
	section.section.section-sm.section-fluid.bg-default
		.container
			h2 HISTORY TIMELINE
		// Owl Carousel
		.owl-carousel.owl-classic.owl-timeline(data-items='1', data-md-items='2', data-lg-items='3', data-xl-items='4', data-margin='30', data-autoplay='true', data-nav='true', data-dots='true')
			.owl-item
				+thumbnail-mary({
					mod: 'thumbnail-md',
					titleNone: true,
					nameImg: 'timeline',
