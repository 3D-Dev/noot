extends  ../_skeleton

//- Includes

block variables
	- var activeCategory = 'pricing'
	- var pageName = 'Pricing'

block page 
	// Page Header
	+header-classic({})
	
	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-elements'
	})
	
	// Section Pricing
	section.section.section-sm.section-first.bg-default
		.container
			h3 White
			include ../sections/_pricing-list
	='\n'
	
	// Section Pricing
	section.section.section-sm.section-last.bg-default
		.container
			h3 Black
			.row.row-30.justify-content-center
				.col-md-6.col-lg-5.col-xl-4
					.box-pricing.box-pricing-black
						.box-pricing-body
							h5.box-pricing-title basic
							h3.box-pricing-price $500.00
							.box-pricing-time starting at
							.box-pricing-divider
								.divider
								span Basic
							ul.box-pricing-list
								li.active Concept development
								li.active UI design
								li Configuration management
								li Software quality assurance
								li App integration
						.box-pricing-button: a.button.button-lg.button-block.button-gray-4(href='#') Get started
				.col-md-6.col-lg-5.col-xl-4
					.box-pricing.box-pricing-black.box-pricing-popular
						.box-pricing-body
							h5.box-pricing-title Optimal
							h3.box-pricing-price $800.00
							.box-pricing-time starting at
							.box-pricing-divider
								.divider
								span Optimal
							ul.box-pricing-list
								li.active Concept development
								li.active UI design
								li.active Configuration management
								li.active Software quality assurance
								li App integration
						.box-pricing-button: a.button.button-lg.button-block.button-primary(href='#') Get started
						.box-pricing-badge popular
				.col-md-6.col-lg-5.col-xl-4
					.box-pricing.box-pricing-black
						.box-pricing-body
							h5.box-pricing-title Ultimate
							h3.box-pricing-price $1200.00
							.box-pricing-time starting at
							.box-pricing-divider
								.divider
								span Ultimate
							ul.box-pricing-list
								li.active Concept development
								li.active UI design
								li.active Configuration management
								li.active Software quality assurance
								li.active App integration
						.box-pricing-button: a.button.button-lg.button-block.button-gray-4(href='#') Get started
	='\n'
	
	// Page Footer
	+footer-classic({})
