extends  ../_skeleton

block variables
	- var activeCategory = 'gallery'
	- var pageName = 'Masonry gallery'

block page 
	// Page Header
	+header-classic({})
	
	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-elements'
	})
	
	// Web開発
	section.section.section-xl.bg-default.text-center
		.container.isotope-wrap
			.isotope-filters.isotope-filters-horizontal
				//- Isotope Filters
				button.isotope-filters-toggle.button.button-md.button-icon.button-icon-right.button-default-outline.button-wapasha(data-custom-toggle='#isotope-8', data-custom-toggle-hide-on-blur='true'  data-custom-toggle-disable-on-blur='true')
					span.icon.fa.fa-caret-down
					| Filter
				ul#isotope-8.isotope-filters-list
					li: a.active(href='#', data-isotope-filter='*', data-isotope-group='gallery') All
					li: a(href='#', data-isotope-filter='Type 1', data-isotope-group='gallery') mobile Apps
					li: a(href='#', data-isotope-filter='Type 2', data-isotope-group='gallery') Custom Software
					li: a(href='#', data-isotope-filter='Type 3', data-isotope-group='gallery') QA & Testing
					li: a(href='#', data-isotope-filter='Type 3', data-isotope-group='gallery') UX and Design
			.row.row-30.isotope(data-isotope-layout='fitRows', data-isotope-group='gallery', data-lightgallery='group')
				.col-sm-4.col-lg-3.isotope-item(data-filter='Type 3')
					+thumbnail-mary({
						mod: 'thumbnail-xs',
						nameImg: 'masonry-gallery',
						sizeImg: '270x300',
						numberImg: '1',
						nameImgOriginal: 'grid-gallery-1'
					})
				.col-sm-8.col-lg-6.isotope-item(data-filter='Type 2')
					+thumbnail-mary({
						mod: 'thumbnail-lg thumbnail-custom-mobile',
						nameImg: 'masonry-gallery',
						sizeImg: '570x300',
						numberImg: '2',
						nameImgOriginal: 'fullwidth-masonry-gallery-5'
					})
				.col-sm-4.col-lg-3.isotope-item(data-filter='Type 1')
					+thumbnail-mary({
						mod: 'thumbnail-xs',
						nameImg: 'masonry-gallery',
						sizeImg: '270x300',
						numberImg: '3',
						nameImgOriginal: 'grid-gallery-2'
					})
				.col-sm-8.col-lg-6.isotope-item(data-filter='Type 3')
					+thumbnail-mary({
						mod: 'thumbnail-lg thumbnail-custom-mobile',
						nameImg: 'masonry-gallery',
						sizeImg: '570x300',
						numberImg: '4',
						nameImgOriginal: 'grid-gallery-3'
					})
				.col-sm-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 2')
					+thumbnail-mary({
						mod: 'thumbnail-xs',
						nameImg: 'masonry-gallery',
						sizeImg: '270x300',
						numberImg: '5',
						nameImgOriginal: 'grid-gallery-4'
					})
				.col-sm-6.col-md-4.col-lg-3.isotope-item(data-filter='Type 1')
					+thumbnail-mary({
						mod: 'thumbnail-xs',
						nameImg: 'masonry-gallery',
						sizeImg: '270x300',
						numberImg: '6',
						nameImgOriginal: 'grid-gallery-8'
					})
			
			.button-wrap: button.button.button-md.button-default-outline.button-wapasha Load More
	='\n'
	
	// Page Footer
	+footer-classic({})