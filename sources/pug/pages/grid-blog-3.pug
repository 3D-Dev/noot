extends  ../_skeleton

//- Includes
include ../components/_ui-posts
include ../components/_ui-pagination

block variables
	- var activeCategory = 'blog'
	- var pageName = 'Grid blog 3'

block page 
	// Page Header
	+header-classic({})
	
	+breadcrumbs({
		category: activeCategory,
		path: [pageName],
		bgImage: 'bg-elements'
	})
	
	// Grid blog
	section.section.section-xl.bg-default.text-md-left
		.container
			.row.row-60.justify-content-center
				.col-sm-9.col-md-6.col-lg-6
					+post-aria({
						img: 'post-22-570x492',
						title: 'Benefits of ASync/Await: Asynchronous Programming',
						time: {datetime: '2021-05-17', dateText: 'May 17, 2021'}
					})
				
				.col-sm-9.col-md-6.col-lg-6
					+post-aria({
						img: 'post-23-570x492',
						title: 'Key Considerations and Warnings of iPaaS',
						time: {datetime: '2021-05-12', dateText: 'May 12, 2021'}
					})
				
				.col-sm-9.col-md-6.col-lg-6
					+post-aria({
						img: 'post-24-570x492',
						title: 'Usage of Hibernate Query Language (HQL)',
						time: {datetime: '2021-05-17', dateText: 'May 17, 2021'}
					})
				
				.col-sm-9.col-md-6.col-lg-6
					+post-aria({
						img: 'post-25-570x492',
						title: 'Startup Software Development and Product Strategy\n',
						time: {datetime: '2021-05-12', dateText: 'May 12, 2021'}
					})
			
			.pagination-wrap
				+pagination-bootstrap(null, 1, 4)
	='\n'
	
	// Page Footer
	+footer-classic({})